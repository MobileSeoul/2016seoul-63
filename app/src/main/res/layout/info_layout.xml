<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        tools:text="name of the store"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/info_image" />

    <TextView
        tools:text="address of the store"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_toEndOf="@+id/info_image"
        android:id="@+id/text2"
        android:textSize="12sp" />

    <ImageView
        android:layout_marginRight="2dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/default_pin"
        android:id="@+id/info_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:color/holo_orange_dark"
        android:id="@+id/info_type"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/info_sort"
        android:layout_below="@+id/info_type"
        android:layout_toEndOf="@+id/text2" />

</RelativeLayout>