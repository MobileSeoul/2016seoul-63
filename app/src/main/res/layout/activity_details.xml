<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.seoulapp.sandfox.retax.DetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/d_image"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/det_default"
        android:layout_height="250dp"
        android:background="@android:color/white"
        android:elevation="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/d_sort"
        android:layout_alignParentStart="true">

    <TextView
        android:text="THIS IS A DETAILSACTIVITY"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d_store"
        tools:ignore="HardcodedText" />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d_address" />
    </LinearLayout>
    <ImageView
        android:id="@+id/d_company"
        android:layout_alignBottom="@+id/d_image"
        android:layout_alignParentStart="true"
        android:layout_height="35dp"
        android:layout_width="35dp" />


    <ImageView
        android:layout_width="35dp"
        android:id="@+id/d_sort"
        android:layout_alignTop="@+id/d_company"
        android:layout_toEndOf="@+id/d_company"
        android:layout_height="35dp" />

    <Button
        android:text="@string/show_direction"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button2"
        android:layout_alignParentEnd="true"
        android:onClick="onClickDirectionBtn"
        android:drawableStart="@drawable/ic_directions_white_36px"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_height="60dp"
        android:drawableTint="@android:color/white" />

</RelativeLayout>
