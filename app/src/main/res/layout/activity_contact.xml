<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seoulapp.sandfox.retax.ContactActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/c_kto"
        android:id="@+id/kto_btn"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@android:color/white"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_marginBottom="3dp"
        android:onClick="onClickContact" />

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@drawable/c_police"
        android:id="@+id/police_btn"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:background="@android:color/white"
        android:layout_marginBottom="3dp"
        android:onClick="onClickContact" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/c_dasan"
        android:id="@+id/dasan_btn"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@android:color/white"
        android:layout_marginBottom="3dp"
        android:onClick="onClickContact" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/c_sgc"
        android:id="@+id/sgc_btn"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:background="@android:color/white"
        android:layout_marginBottom="3dp"
        android:onClick="onClickContact" />
</LinearLayout>
</RelativeLayout>